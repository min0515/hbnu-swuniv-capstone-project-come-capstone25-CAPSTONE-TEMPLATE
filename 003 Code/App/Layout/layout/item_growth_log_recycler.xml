<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="2025.01.01    01:15"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@drawable/tv_default_style3"/>

    <GridLayout
        android:id="@+id/list_items"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:rowCount="6"
        android:columnCount="4"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:text="Cumulative\nTotal / Mature / Mature Ratio / Harvested"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#e0ffff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_cumul_total"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="20"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tv_default_style"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_cumul_mature"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="10"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tv_default_style"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_cumul_ratio"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="50%"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tv_default_style"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_cumul_harvest"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tv_default_style"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="4"
            android:text="At record\nTotal / Mature / Mature Ratio / Harvested"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#e0ffff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_current_total"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="10"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tv_default_style"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_current_mature"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tv_default_style"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_current_ratio"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="50%"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tv_default_style"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_current_harvest"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tv_default_style"/>

    </GridLayout>
</LinearLayout>